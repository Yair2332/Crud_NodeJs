<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crud Node js</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>

    <%- include('../partials/nav.ejs')   %>

    <div class="container">


       
    <h2 id="registro">Registros de Usuarios</h2>
    <form action="/busqueda" method="post" class=" row d-flex mb-2">
      <div class="col-6"><input type="text" name="busqueda" placeholder="Ingresar documento" class="form-control"></div>
      <button type="submit" class="btn btn-primary col-3 ">Buscar</button>
    </form>
      <div class="table-responsive small overflow-x-auto" >
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th scope="col" class="text-center text-aling-center d-flex justify-content-center">id</th>
              <th scope="col" class="text-center">Documento</th>
              <th scope="col" class="text-center">Nombre</th>
              <th scope="col" class="text-center">Apellido</th>
              <th scope="col" class="text-center">Puesto</th>
            </tr>
          </thead>
          <tbody>
            <% resultados.forEach((user)=>{ %>
                <tr>
                    <td><button class="btn btn-primary w-100" ><%= user.id %></button></td>
                    <td class="text-center"><%= user.documento %></td>
                    <td class="text-center"><%= user.nombre %></td>
                    <td class="text-center"><%= user.apellido %></td>
                    <td class="text-center"><%= user.puesto %></td>
                    <td class="text-center">
                      <div class="btn-group">
                        <a href="/edit/<%= user.id %>" class="btn btn-warning">Editar</a>
                        <a href="/delete/<%= user.id %>" class="btn btn-danger">Eliminar</a>
                      </div>  
                    </td>
                </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>

    <%- include('../partials/footer.ejs')   %>

    
</body>
</html>